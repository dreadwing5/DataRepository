<%- include ("../partials/header") %>

  <div class="container-fluid">
    <section id="form">
      <form id="myForm" class="needs-validation" novalidate action="/faculty/fac_MOOCcourse" data-isinsertmode=<%=isInsertMode%>>
        <div class="container-fluid">

          <!-- Header Section -->

          <div class="row data-row">
            <div class="col-md-8 mb-3">
              <h4 class="mb-3 title">MOOC Course details</h4>
            </div>
            <div class="col-md-4 mb-3 report">
              <a href="/faculty/search" class="btn btn-sm btn-primary shadow-sm"><i
                  class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
            </div>
          </div>
          

          <div class="row data-row">

            <div class="col-md-6 mb-3">
              <label class="required">Name of Department</label>
              <input type="text" name="Nameofdepartment" class="form-control">
              <div class="invalid-feedback">
                  Please enter valid details.
                </div>
            </div>
            <div class="col-md-6 mb-3">
              <label class="required">Duration</label>
              <input type="text" name="duration" class="form-control">
              <div class="invalid-feedback">
                  Please enter valid details.
                </div>
            </div>
          </div>
          <div class="row data-row">

            <div class="col-md-6 mb-3">
              <label class="required">Status</label>
              <input type="text" name="status" class="form-control">
              <div class="invalid-feedback">
                  Please enter valid details.
                </div>
            </div>
            <div class="col-md-6 mb-3">
              <label class="required">Faculty ID</label>
              <select name="id" class="custom-select d-block w-100">
                <option value="">Choose...</option>
                <option>Faculty 1</option>
                <option>Faculty 2</option>
                
              </select>
              <div class="invalid-feedback">
                Please select a valid type.
              </div>
            </div>
            
          </div>
          <div class="row data-row">

            <div class="col-md-6 mb-3">
              <label for="date" class="required">Start Date</label>
              <input type="date" name="startdate" class="form-control" onchange="setDate()">
              <div class="invalid-feedback">
                  Please enter valid details.
                </div>
            </div>
            <div class="col-md-6 mb-3">
              <label for="date" class="required">End Date</label>
              <input type="date" name="enddate" class="form-control" onchange="setDate()">
              <div class="invalid-feedback">
                  Please enter valid details.
                </div>
            </div>
            
          </div>
          <div class="row data-row">
            
            
            <div class="col-md-6 mb-3">
              <label class="required">Topic</label>
              <input type="text" name="topic" class="form-control">
              <div class="invalid-feedback">
                  Please enter valid details.
                </div>
            </div>
            <div class="col-md-6 mb-3">
              <label class="required">Department</label>
              <select name="department" class="custom-select d-block w-100">
                <option value="">Choose...</option>
                <option>CSE</option>
                <option>ISE</option>
                <option>ECE</option>
                <option>TCE</option>
                <option>EEE</option>
                <option>CIV</option>
                <option>MECH</option>
                <option>MBA</option>
                <option>MCA</option>
                <option>Basic Sciences</option>
                <option>College Level</option>
              </select>
              <div class="invalid-feedback">
                Please select a valid type.
              </div>
            </div>
            
            
            
            


          </div>
          <div class="row data-row">
            
            
            <div class="col-md-4 mb-3">
              <label class="required">Registered In</label>
              <select name="level" class="custom-select d-block w-100">
                <option value="">Choose...</option>
                <option>NPTEL</option>
                <option>COURSERA</option>
                <option>CMRIT</option>
                <option>Others</option>
                
              </select>
              <div class="invalid-feedback">
                Please select a valid type.
              </div>
            </div>
            <div class="col-md-4 mb-3">
              <label class="required">Applied for exam</label>
              <select name="level" class="custom-select d-block w-100">
                <option value="">Choose...</option>
                <option>yes</option>
                <option>no</option>
                
                
              </select>
              <div class="invalid-feedback">
                Please select a valid type.
              </div>
            </div>

            
          </div>
         

          <%- include ("../partials/description") %>

          <div class="submit-button">
          <%if(isInsertMode){%>
          <button class="btn btn-primary btn-lg btn-block buttons" type="submit">
            Submit</button>
          <%} else{%>
          <button class="btn btn-secondary btn-lg btn-block buttons" type="submit">
            Update</button>
          <span id='variableJSON' hidden>
            <%= JSON.stringify(data); %>
          </span>
          <%}%>
        </div>
        </div>

      </form>



    </section>

  </div>

  <!-- Footer -->


  <%- include ("../partials/footer") %>

    <script  type="text/javascript" src="/js/date.js">
    </script>

    </body>

    </html>
