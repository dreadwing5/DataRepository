<%- include ("../partials/header") %>

<div class="container-fluid">
  <section id="form">
    <form id="myForm" class="needs-validation" novalidate action="/faculty/Mous" data-isinsertmode=<%=isInsertMode%>>
      <div class="container-fluid">

        <!-- Header Section -->

        <div class="row data-row">
          <div class="col-md-8 mb-3">
            <h4 class="mb-3 title">MoUs</h4>
          </div>
          <div class="col-md-4 mb-3 report">
            <a href="/faculty/search" class="btn btn-sm btn-primary shadow-sm"><i
                class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
          </div>
        </div>


        <div class="row data-row">

          <div class="col-md-6 mb-3">
            <label class="required">Company Name</label>
            <input type="text" name="companyName" class="form-control">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label class="required">Company Address</label>
            <input type="text" name="address" class="form-control">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>
        </div>
        <div class="row data-row">

          <div class="col-md-6 mb-3">
            <label for="date" class="required">Start Date</label>
            <input type="date" name="startDate" class="form-control date__control start__date">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label for="date" class="required">End Date</label>
            <input type="date" name="endDate" class="form-control end__date">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>
        </div>
        <div class="row data-row">

          <div class="col-md-6 mb-3">
            <label class="required">Collaboration Title</label>
            <input type="text" name="collaborationTitle" class="form-control">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>


          <div class="col-md-6 mb-3">
            <label class="required">Objectives</label>
            <input type="text" name="objectives" class="form-control">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label class="required">Benefit in terms of learning/Skill/Knowledge obtained</label>
            <input type="text" name="benefit" class="form-control">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>

          <div class="col-md-6 mb-3">
            <label class="required">MoU Signed By</label>
            <br>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" name="SignedBy-CSE" value="CSE">
              <label class="form-check-label">
                CSE
              </label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" name="SignedBy-ISE" value="ISE">
              <label class="form-check-label">
                ISE
              </label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" name="SignedBy-CIVIL" value="CIVIL">
              <label class="form-check-label">
                CIVIL
              </label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" name="SignedBy-MECH" value="MECH">
              <label class="form-check-label">
                MECH
              </label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" name="SignedBy-ECE" value="ECE">
              <label class="form-check-label">
                ECE
              </label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" name="SignedBy-EEE" value="EEE">
              <label class="form-check-label">
                EEE
              </label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" name="SignedBy-BS" value="BS">
              <label class="form-check-label">
                BS
              </label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" name="SignedBy-MBA" value="MBA">
              <label class="form-check-label">
                MBA
              </label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" name="SignedBy-MCA" value="MCA">
              <label class="form-check-label">
                MCA
              </label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" name="SignedBy-TCE" value="TCE">
              <label class="form-check-label">
                TCE
              </label>
            </div>
          </div>



        </div>
        <div class="row data-row">


          <div class="col-md-6 mb-3">
            <label class="required">National/International</label>
            <select name="level" class="custom-select d-block w-100">
              <option value="">Choose...</option>
              <option>National</option>
              <option>International</option>

            </select>
            <div class="invalid-feedback">
              Please select a valid type.
            </div>
          </div>

          <div class="col-md-6 mb-3">
            <label class="required">COE</label>

            <!-- COE  -->

            <%- include ("../partials/coe") %>

            <div class="invalid-feedback">
              Please select a valid type.
            </div>
          </div>
        </div>


        <%- include ("../partials/description") %>

        <div class="submit-button">
          <%if(isInsertMode){%>
          <button class="btn btn-primary btn-lg btn-block buttons" type="submit">
            Submit</button>
          <%} else{%>
          <button class="btn btn-secondary btn-lg btn-block buttons" type="submit">
            Update</button>
          <span id='variableJSON' hidden>
            <%= JSON.stringify(data); %>
          </span>
          <%}%>
        </div>
        </div>

      </form>



    </section>

  </div>

  <!-- Footer -->


  <%- include ("../partials/footer") %>

          
          </script>

          </body>

          </html>